{
  "manifest_version": 2,
  "name": "Simple Torrent Downloader",
  "version": "1.0",
  "description": "Download torrents easily with this Chrome extension",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["downloads", "storage", "contextMenus", "tabs"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Torrent Search",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "openTorrentPopup": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Open the torrent downloader popup"
    }
  }
}
